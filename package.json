{
  "name": "hiproxy",
  "version": "1.0.3",
  "description": "hiproxy is a Node.js proxy client",
  "main": "src/index.js",
  "bin": {
    "hiproxy": "bin/cli.js",
    "hip": "bin/cli.js"
  },
  "scripts": {
    "doc": "jsdoc2md src/*.js src/listeners/*.js src/listeners/request/*.js",
    "semistandard": "semistandard src/**/*.js example/**/*.js",
    "test": "nyc mocha test/**/*.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report": "npm test && nyc report --reporter=lcov --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zdying/hiproxy.git"
  },
  "keywords": [
    "proxy",
    "proxy",
    "client"
  ],
  "author": "zdying",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zdying/hiproxy/issues"
  },
  "homepage": "https://github.com/zdying/hiproxy#readme",
  "dependencies": {
    "colors": "^1.1.2",
    "hemsl": "^1.0.7",
    "simple-mime": "^0.1.0"
  },
  "devDependencies": {
    "codecov": "^2.1.0",
    "ghooks": "^2.0.0",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "request": "^2.79.0",
    "semistandard": "^10.0.0"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm test"
    }
  }
}
